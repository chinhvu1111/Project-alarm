<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet_adding_task"
    android:backgroundTint="#fff"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".fragment.ActionBottomDialogFragment">
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EED7AD"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/frameListCategories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <androidx.cardview.widget.CardView
                android:layout_gravity="center"
                card_view:cardBackgroundColor="@color/color_circle_gray"
                android:layout_weight="1"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/systemcategory"
                card_view:cardCornerRadius="10dp"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/lnSystemCategory"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_gravity="center"
                        android:src="@drawable/ic_settings_black_24dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textStyle="bold"
                        android:textColor="@color/color_white"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/tvsystemcategory"
                        android:gravity="center"
                        android:text="Tiêu đề tác vụ hệ thống"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginLeft="2dp"
                android:layout_gravity="center"
                card_view:cardBackgroundColor="@color/arrange"
                android:layout_weight="1"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/customcategory"
                card_view:cardCornerRadius="10dp"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/lnCustomCategory"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_gravity="center"
                        android:src="@drawable/ic_user_black_24dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:textStyle="bold"
                        android:textColor="@color/color_white"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/tvCustomCategory"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:text="Tiêu đề tác vụ tùy chọn"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>


</FrameLayout>