<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_adding_group"
    tools:context=".activity.CreatingGroupActivity">

    <RelativeLayout
        android:layout_marginTop="200dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/lnCamera"
        android:background="@drawable/background_layout_camera"
        android:layout_width="match_parent"
        android:layout_height="150dp">
        <ImageView
            android:layout_centerInParent="true"
            android:id="@+id/imgChoosingPicture"
            android:layout_width="400dp"
            android:layout_height="match_parent" />
        <ImageView
            android:visibility="visible"
            android:id="@+id/imgPicture"
            android:padding="10dp"
            android:background="@drawable/background_camera"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_camera_alt_white_24dp"
            android:layout_width="70dp"
            android:layout_height="70dp" />
    </RelativeLayout>
    <EditText
        android:textColor="@color/white"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:gravity="left"
        android:layout_margin="10dp"
        android:id="@+id/edtNameGroup"
        android:ems="10"
        android:background="@drawable/background_login_field"
        android:layout_below="@+id/lnCamera"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    <Button
        android:id="@+id/btnAddingGroup"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/edtNameGroup"
        android:background="@drawable/background_task_item"
        style="@style/Widget.AppCompat.Button.Colored"
        android:text="Thêm nhóm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/lnLoadProgressBarAddingGroup"
        android:visibility="visible"
        android:background="@color/mdtp_transparent_black"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ProgressBar
            android:layout_centerInParent="true"
            android:indeterminate="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</RelativeLayout>