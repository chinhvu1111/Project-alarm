<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ChatActivity">
    <ScrollView
        android:id="@+id/scrollViewGroupChat"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:text="sdfsdfgsdfsdfsdf"
                android:textSize="20sp"
                android:textColor="@android:color/background_dark"
                android:textAllCaps="false"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>

    </ScrollView>
    <LinearLayout
        android:background="@drawable/background_task_item"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:layout_gravity="center_vertical"
            android:hint="Nhập tin nhắn ở đây!"
            android:textColor="@android:color/white"
            android:layout_weight="5"
            android:id="@+id/edtMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <ImageButton
            android:layout_marginRight="5dp"
            android:layout_gravity="center_vertical"
            android:layout_toRightOf="@+id/edtMessage"
            android:src="@drawable/ic_send_arrow_black_24dp"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="40dp" />
    </LinearLayout>

</RelativeLayout>